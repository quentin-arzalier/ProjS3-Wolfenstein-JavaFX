<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root alignment="CENTER" hgap="100" type="javafx.scene.layout.GridPane" vgap="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
    <VBox fx:id="connectedMenu" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label fx:id="listeJoueur" alignment="CENTER" prefHeight="23.0" prefWidth="272.0" text="Liste des Joueurs" textAlignment="CENTER">
            <font>
                <Font name="Times New Roman Bold" size="20" />
            </font>
        </Label>
        <ListView fx:id="memberListView" prefHeight="200" />
        <HBox spacing="10.0">
            <Button fx:id="startButton" prefHeight="25.0" prefWidth="272.0" text="Start" />
        </HBox>
    </VBox>
    <VBox fx:id="firstMenu" spacing="20.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label alignment="CENTER" prefHeight="23.0" prefWidth="270.0" text="Héberger ou rejoindre?" textAlignment="CENTER">
            <font>
                <Font name="Times New Roman Bold" size="20" />
            </font>
        </Label>
        <Label fx:id="errorMessage" alignment="CENTER" prefWidth="272.0" text="Entrez l'adresse IP de l'hôte" textAlignment="CENTER">
            <font>
                <Font name="Times New Roman" size="12" />
            </font>
        </Label>
        <TextField fx:id="ipField" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="hostButton" prefHeight="25.0" prefWidth="120.0" text="Héberger" />
            <Button fx:id="joinButton" prefHeight="25.0" prefWidth="120.0" text="Rejoindre" />
        </HBox>
      <Button fx:id="playAlone" mnemonicParsing="false" prefHeight="25.0" prefWidth="271.0" text="Jouer seul" />

    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints valignment="CENTER" />
   </rowConstraints>
</fx:root>
